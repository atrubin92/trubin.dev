{
    "compilerOptions": {
        // Target a version of JavaScript (e.g. ES5, ES6/ES2015, etc.)
        "target": "ES6",

        "module": "ES6", // or "ES2015", "ESNext", etc.

        // Where TypeScript should look for source files
        "rootDir": "TypeScript",

        // Where to put the compiled .js files
        "outDir": "compiled_js",
        
        // Or "esnext", or a later version.  "dom" is usually needed for browser environments.
        "lib": ["es2017", "dom"],

        // Include source maps for easier debugging (optional)
        "sourceMap": true
    },
    "tsc-alias": {
      "resolveFullPaths": true,
      "verbose": false
    },
    "include": [
        // Paths to your .ts files
        "TypeScript/**/*"
    ]
}  